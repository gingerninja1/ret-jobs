<% obj.each do |role| %>
<div class="row">
    <div class="col-xs-8">
        <div class="well well-lg">
            <div class="role-title"><%= link_to role.name, role_path(role) %></div>
            <div class="role-body">
                <%= truncate(role.description, length: 100) %>
                <div class="role-meta-details">
                    <small>Created at: <%= time_ago_in_words(role.created_at) %> ago,
                    last updated: <%= time_ago_in_words(role.updated_at) %> ago</small>
                </div>
            </div>
            <div class="role-actions">
                <%= link_to "Edit this role", edit_role_path(role), class: "btn btn-xs btn-primary" %>
                <%= link_to "Delete this role", role_path(role), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-xs btn-danger" %>
            </div>
        </div>
    </div>
</div>
<% end %>
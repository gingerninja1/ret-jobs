<%= render "/shared/errors", obj: @role %> 

<div class="row">
    <div class="col-xs-12">
        <%= form_for(@role, :html => {class: "form-horizontal", role: "form"}) do |f| %>
        <div class="form-group">
            <div class="control-label col-sm-2"><%= f.label :name %></div>
            <div class="col-sm-10"><%= f.text_field :name, class: "form-control", placeholder: "Name of Role", autofocus: true %></div>
        </div>
        <div class="form-group">
            <div class="control-label col-sm-2"><%= f.label :description %></div>
            <div class="col-sm-10"><%= f.text_area :description, class: "form-control", placeholder: "Description of role", rows: 10 %></div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <%= f.submit class: "btn btn-primary btn-lg" %>
            </div>
        </div>
        <% end %>
        <div class="col-xs-8 col-xs-offset-2">
            [ <%= link_to "Roles Home", roles_path %> ]
        </div>
    </div>
</div>
<!-- Modal -->
<div class="modal fade" id="message-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Send a message</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form class='send-msg' action="/send_email/" method="post">
                    <div class="form-group">
                        <label>Neighbor:</label> <%= user.profile.full_name %>
                    </div>
                    <div class="form-group">
                        <label>Message</label>
                        <textarea name="msg" placeholder="Enter your message" class="form-control"></textarea>
                    </div>
                    <input type="hidden" value="<%= action_name %>" />
                </form>
            </div>
            <div class="modal-footer">
                <button id="msg-submit" type="button" class="btn btn-primary" data-dismiss="modal">Send Message</button>
            </div>
        </div>
    </div>
</div>